{
  "version": 2,
  "public": true,
  "rootDirectory": "frontend",
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist/frontend",
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://adaction-backend.onrender.com/api/:path*" 
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
