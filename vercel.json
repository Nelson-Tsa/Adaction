{
  "version": 2,
  "public": true,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist/frontend",
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://adaction-backend.onrender.com/api/:path*" 
    },
    {
      "source": "/(.*)",
      "destination": "src/index.html"
    }
  ]
}
