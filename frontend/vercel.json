{
  "version": 2,
  "public": true,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist/frontend"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://adaction-backend.onrender.com/api/:path*" 
    }
  ]
}
