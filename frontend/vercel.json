{
  "version": 2,
  "public": true,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist/frontend",
        "installCommand": "pnpm install --no-frozen-lockfile"
      }
    }
  ],
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://adaction-backend.onrender.com/api/:path*" 
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
